*
  margin: 0
  padding: 0

ul
  list-style: none

ul.users li
  display: inline-block
  width: 200px

body
  padding: 50px 0
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif

  .container
    min-width: 200px
    max-width: 940px
    width: 90%

      .rm-user
        margin-left: 10px

  .media
    .pull-left
      margin-top: 5px
    .media-body
      .tail
        font-size: 12px
        a
          margin-right: 40px
        .time
          margin-right: 40px

  .header
    margin-bottom: 40px
    border-bottom: 2px solid #bbb
    a
      font-size: 25px
      font-weight: bold
      line-height: 37px
      text-decoration: none
      margin-right: 10px
      color: #666
      display: inline-block
      &:hover
        color: #edd
    .logo
      img
        height: 70px
    .clear
      clear: both
      
    .input-append 
      margin-top: 25px
      float: right
    .alerter
      margin-top: 30px
      margin-right: 10px
      float: right

  .tweets
    margin: 0
    list-style: none
    p.alert
      text-align: center
      margin-top: 20px
    li
      margin-bottom: 10px;
      border-bottom: 1px solid #ccc;
      .media-body
        img
          margin-top: 5px
        

    .thumb_img:hover
        cursor: pointer
        cursor: -webkit-zoom-in
        cursor: -moz-zoom-in
    .middle_img
      display: none
      &:hover
        cursor: pointer
        cursor: -webkit-zoom-out
        cursor: -moz-zoom-out

  .row-fluid .span3
    float: right

/* tablet and mobile phones */
@media only screen and (max-width: 716px) 
  .row-fluid 
    .span8
      width: 100%
    .span3
      display: none

@media only screen and (max-width: 350px) 
  body
    .container
      .header
        .alerter
          margin-top: 0
          margin-right: 70px

extends layout

block content
  .wrapper  
    h1= title
    .left-pane
      ul.tweets

    .right-pane
      form
        input(type='text', id='tweeter_name')
        input(id='add_tweeter', type='button', value='Add')
      .users
    script#tweet-template(type='template')
      !{ tweet_tmpl }
    script#user-template(type='template')
      !{ user_tmpl }

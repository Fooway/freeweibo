li
  .media
    img.pull-left(src=tweet.user_img)
    .media-body
      h5.media-heading 
        a(href='//weibo.com/u/' + tweet.user_id, target='_blank')= tweet.user_name
      p.text 
        span !{tweet.text}
        - if (tweet.pic_name != '') {
          br
          img.img-polaroid(src='/images/tweets/' + tweet.pic_name + '_thumb.jpg', class='thumb_img')
          img.img-polaroid(src='/images/tweets/' + tweet.pic_name + '_middle.jpg', class='middle_img')
        - }
      p.tail 
        - if (tweet.pic_name != '') {
          a(href='/images/tweets/' + tweet.pic_name + '_large.jpg', target='_blank') 查看大图
        - }
        span.time #{tweet.date} 
        转发(#{tweet.reposts_count}) 评论(#{tweet.comments_count})

